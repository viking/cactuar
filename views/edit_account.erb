<h1>Change your account</h1>

<form action="<%= url_for("/account/edit") %>" method="post">
  <p>
    Please enter your current password for security reasons.
  </p>
  <p>
    <label for="current_password">Current password:</label>
    <input id="current_password" type="password" name="user[current_password]" />
  </p>

  <table>
    <tbody>
      <tr>
        <td><label for="email">E-mail address</label></td>
        <td><input id="email" type="text" name="user[email]" value="<%= current_user[:email] %>" /></td>
      </tr>
      <tr>
        <td><label for="new_password">New password (optional)</label></td>
        <td><input id="new_password" type="password" name="user[password]" /></td>
      </tr>
      <tr>
        <td><label for="new_password_confirmation">Confirm new password (optional)</label></td>
        <td><input id="new_password_confirmation" type="password_confirmation" name="user[password_confirmation]" /></td>
      </tr>
    </tbody>
  </table>
  <p>
    <input type="submit" value="Submit" />
  </p>
</form>
