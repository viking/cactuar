<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>E-mail</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, i| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.id == current_user.id ? "" : delete_link("Delete", url_for("/admin/users/#{user.id}")) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<a href="<%= url_for("/admin/users/new") %>">New user</a>
